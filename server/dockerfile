# Sử dụng Node.js 22.14.0
FROM node:22.14.0

# Đặt thư mục làm việc
WORKDIR /app

# Copy package.json và package-lock.json trước
COPY package*.json ./

# Cài đặt dependencies
RUN npm install

# Copy toàn bộ mã nguồn vào container
COPY . .

# Chạy server
CMD ["npm", "start"]

# Expose cổng server (giả sử backend chạy trên cổng 5000)
EXPOSE 5000
